{
  "manifest_version": 2,

  "name": "Servercooties",
  "description": "Monitors status of what.thedailywtf.com forums using servercooties.com",
  "version": "0.1",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "background": {
    "page": "background.html"
  },

  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "images/connecting.png",
    "default_title": "Go to servercooties.com"
  },
   "content_security_policy": "script-src 'self' https://servercooties.com; object-src 'self'"
}